@model Minesweeper2.Models.UserModel

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>


@using (Html.BeginForm("Register", "Register", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Fill out the form to continue</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    First Name: @Html.TextBoxFor(UserModel => UserModel.FirstName) <p></p>
    Last Name: @Html.TextBoxFor(UserModel => UserModel.LastName) <p></p>
    Male: @Html.RadioButtonFor(UserModel => UserModel.Sex, "Male", new { Checked = "checked" })
    Female: @Html.RadioButtonFor(UserModel => UserModel.Sex, "Female", new { Checked = "unchecked" })<p></p>
    Age: @Html.TextBoxFor(UserModel => UserModel.Age) <p></p>
    State: @Html.TextBoxFor(UserModel => UserModel.State) <p></p>
    Email: @Html.TextBoxFor(UserModel => UserModel.Email) <p></p>
    UserName: @Html.TextBoxFor(UserModel => UserModel.Username) <p></p>
    Password: @Html.TextBoxFor(UserModel => UserModel.Password) <p></p>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Register" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
